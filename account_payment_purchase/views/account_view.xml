<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

   		<record model='ir.ui.view' id='view_payment_order_form'>
			<field name='name'>payment.order.form.inherit.purchase</field>
			<field name='model'>payment.order</field>
			<field name='inherit_id' ref='account_payment.view_payment_order_form'/>
			<field name='arch' type='xml'>
				<xpath expr="//div[@name='box_buttons']" position="after">
                	<button class="oe_inline oe_stat_button oe_right" name="%(action_create_purchase_order)d" string="Purchase Orders" Help="Select Purchase Orders to Pay"
                               type="action" attrs="{'invisible':[('state','not in',['draft','confirm'])]}" icon="fa-pencil-square-o" widget="statinfo"/>
                </xpath>
				<xpath expr="//field[@name='move_line_id']" position="after">
                	<field name="purchase_id"/>
                </xpath>
			</field>
		</record>

   		<record model='ir.ui.view' id='view_payment_line_form'>
			<field name='name'>payment.line.form.inherit.purchase</field>
			<field name='model'>payment.line</field>
			<field name='inherit_id' ref='account_payment.view_payment_line_form'/>
			<field name='arch' type='xml'>
				<xpath expr="//field[@name='move_line_id']" position="after">
                	<field name="purchase_id"/>
                </xpath>
			</field>
		</record>

	</data>
</openerp>
